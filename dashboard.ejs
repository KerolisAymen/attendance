<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User List</title>
  <style>
    .grid-container {
        display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    grid-gap: 10px;
    padding: 20px;
    }

    .user-card {
        /* padding: 3px; */
    text-align: center;
    background-color: darkslategray;
    border-radius: 20px;
    color: white;
    font-size: larger;
    }
  </style>
</head>
<body>
  <h1>User List</h1>
  <div class="grid-container">
    <% users.forEach(user => { %>
      <div class="user-card">
        <p><%= user.name %></p>
      </div>
    <% }); %>
  </div>
</body>
</html>
