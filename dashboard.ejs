<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1,user-scalable=0" />
  <title>User List</title>
  <style>
    .grid-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      /* grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); */
      grid-gap: 10px;
      /* padding: 20px; */
    }

    .user-card {
      display: flex;
    padding: 5px;
    height: 80px;
    width: 200px;
    text-align: center;
    background-color: #612d8d;
    border-radius: 20px;
    color: white;
    font-size: larger;
    flex-direction: row-reverse;
    justify-content: space-evenly;
    align-items: center;

    }

    .profilepic {
         /* width: 40%; */
    max-width: 40%;
    height: -webkit-fill-available;
    background-color: white;
    border-radius: 15px;
    }

    .textdata {
      width: -webkit-fill-available;
    }

    .user-card:hover {
      background-color: #0056b3;
    }
  </style>
</head>

<body>
  <h1>User List</h1>
  <div class="grid-container">
    <% users.forEach(user=> { %>
      <div class="user-card" onclick="openprofile('<%= user.ID %>')">

        <img src="
        <% if (user.profilepic == "" || user.profilepic == undefined) { %>
          https://www.svgrepo.com/show/384377/account-avatar-person-profile-user.svg
      <% } else { %>
          <%= user.profilepic %>
      <% } %>
      
        " alt="profilepic" class="profilepic">
        <div class="textdata">
          <div>
            <%= user.ID %>
          </div>
          <div>
            <%= user.name %>
          </div>
          <div>
            <%= user.meetings.length %>
          </div>
        </div>
      </div>
      <% }); %>
  </div>

  <script>
    function openprofile(name){
      window.location.href = "attendanceReview/"+encodeURI(name);

    }
  </script>
</body>

</html>