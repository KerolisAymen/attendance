<html>

<head>

</head>

<body>
    <div class="container">
        <% users.forEach((user)=>{ %>


            <div class="usercard">
                <img src=" 
                
                https://api.qrserver.com/v1/create-qr-code/?size=300x300&data=

                <%=user.ID%>" alt="qrcodepicture">
                <h3 class="name">

                    <%= user.ID %>
                </h3>

                <h3 class="name">
                    <%= user.name %>
                </h3>
                <h3 class="grade">
                    <%= user.grade %>
                </h3>
            </div>

            <% }) %>
    </div>
    <style>
        img{
            width: 4.5cm;
            height: 4.5cm;
        }
        .container{
            justify-content:space-around ;
           align-items: center;
           align-content: center;
            display: flex;
            flex-wrap: wrap;
        }
        .usercard{
            page-break-inside: avoid;
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 0.4cm;
        }
         h3 {
            padding: 0cm;
            margin: 0cm;
        }
    </style>
</body>

</html>